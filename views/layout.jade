doctype html
html
	head
		title= title
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
		link(rel='stylesheet', href='/css/style.css')
		script(src='https://npmcdn.com/react@15.3.0/dist/react.min.js')
		script(src="https://npmcdn.com/react-dom@15.3.0/dist/react-dom.min.js")
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
		script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
	body
		.row
			.col-md-6
				a.navbar-brand(href='/') Cyber Harcelement
			.col-md-6.text-right
				.btn-group
					//- we check if the user is logged (info provided by our middleware)
					if !login
						a.btn.btn-default(type='button', href='/#{lang}/members/login')
							span.glyphicon.glyphicon-log-in
								|  Login
						a.btn.btn-default(type='button', href='/#{lang}/members/register_smile')
							span.glyphicon.glyphicon-star
								|  Register
					else
						if picture
							img(src='#{picture}', alt='myphoto', style='margin-left:15px;')

						//- if email
						//- 	span #{email}
						a.btn.btn-default(type='button', href='/#{lang}/members/logout') Logout


		if message.success
			.alert.alert-success(role='alert')
				| #{message.success}
		if message.error
			.alert.alert-danger(role='alert')
				| #{message.error}

		script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.0/angular.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.0/angular-resource.min.js")
		block content