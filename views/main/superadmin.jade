	button.btn.btn-info.btn-lg(type='button', data-toggle='modal', data-target='#myModalAdd') Add
	#myModalAdd.modal.fade(role='dialog')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal') &times;
					h4.modal-title Add School
					form(role='form', method='POST', action='superadmin')
						.modal-body
							label(for='name') School name 
							input#email.form-control(type='text', placeholder='School name', name='name')
							
							label(for='exampleInputPassword1') Address
							input(type="hidden", name="lang", value="#{lang}")
							input#password.form-control(type='text', placeholder='Address', name='address')
						.modal-footer
							input.btn.btn-primary(type='submit', value="#{__('rILocalyRegister')}")

	button.btn.btn-info.btn-lg(id='update_btn', type='button', data-toggle='modal', data-target='#myModalUpdate') Update
	#myModalUpdate.modal.fade(role='dialog')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal') &times;
					h4.modal-title Update school
					form(role='form', method='POST', action='superadmin')
						.modal-body
							label(for='name') School name 
							input#email.form-control(type='text', placeholder='School name', name='name')
							
							label(for='exampleInputPassword1') Address
							input(type="hidden", name="lang", value="#{lang}")
							input#password.form-control(type='text', placeholder='Address', name='address')
						.modal-footer
							input.btn.btn-primary(type='submit', value="#{__('rILocalyRegister')}")
