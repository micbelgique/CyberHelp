block content
	p SUPRADMINTABEL


	table.table(id='table', data-click-to-select='true')
		theadS
			tr
				th 
				th School name
				th Address
		tbody
			
			each val, i in schools
				tr 
					td
						input(id=i + '' type='checkbox', aria-label='...')
					td(id='name' + i) #{val.name}
					td(id='address' + i) #{val.address}





