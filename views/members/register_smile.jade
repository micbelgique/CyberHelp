extends ../layout

block content

	p Veuillez vous enregistrer ici svp

	form(role='form', method='POST', action='/#{lang}/members/loggedfb2?myQuery=none')
		.form-group
			input(type="hidden", name="lang", value="#{lang}")
			label(for='name') Email address  
			input#email.form-control(type='email', placeholder='Email', name='email', value='#{user.email}')
		.form-group
			label(for='password') Password
			input(type="hidden", name="lang", value="#{lang}")
			input#password.form-control(type='text', placeholder='Mot de passe', name='password')
		.row
			.col-xs-12
				.form-group
					input.btn.btn-primary(type='submit', value="s\'enregister")

		.row
			.col-xs-12
				.form-group.col-xs-12
					p.forms-notes
						| #{message}
	

